<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/restaurant_card_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:elevation="8dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurant_card_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restaurant_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="식당 이름"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_card_image_view" />

        <TextView
            android:id="@+id/restaurant_card_address"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="경기도 의정부시"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_card_title" />

        <TextView
            android:id="@+id/restaurant_card_review_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="리뷰"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_card_traveler_rate_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_traveler_rate_label" />

        <TextView
            android:id="@+id/restaurant_card_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_card_review_label"
            app:layout_constraintStart_toEndOf="@+id/restaurant_card_review_label"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_review_label" />


        <TextView
            android:id="@+id/restaurant_card_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="0.1km"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_card_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/restaurant_card_title"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_title" />

        <TextView
            android:id="@+id/restaurant_card_local_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="현지인 평점"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/restaurant_card_local_rate"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_address" />

        <TextView
            android:id="@+id/restaurant_card_local_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_card_local_rate_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_local_rate_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/restaurant_card_traveler_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="여행자 평점"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/restaurant_card_traveler_rate"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_card_local_rate_label"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/restaurant_card_traveler_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_card_traveler_rate_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/restaurant_card_traveler_rate_label" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>